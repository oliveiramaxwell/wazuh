    <group>sysmon_event2,</group>
  </rule>

  <rule id="101106" level="5">
    <if_sid>61605</if_sid>
    <description>Sysmon - Event 3: Network connection to $(win.eventdata.destinationIp):$(win.eventdata.destinationPort) by $(win.eventdata.image)</description>
